<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:id="@+id/ll_audio_play_container"
              android:background="@drawable/shape_rectangle"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/audio_play_pasttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:text="03:28"
            android:textColor="@color/ux_color_white"
            android:textSize="14sp"/>

        <SeekBar
            android:id="@+id/audio_play_seekbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:progressDrawable="@drawable/bg_audio_seekbar"
            android:thumb="@drawable/bg_audio_seekbar_thumb"
            android:minWidth="100dip"/>

        <TextView
            android:id="@+id/audio_play_totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dip"
            android:text="05:28"
            android:textColor="@color/ux_color_white"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/audio_play_slow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:src="@drawable/audio_player_slow_selector"/>

        <ImageView
            android:id="@+id/audio_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:src="@drawable/audio_player_pause_selector"/>

        <ImageView
            android:id="@+id/audio_play_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:src="@drawable/audio_player_stop_selector"/>

        <ImageView
            android:id="@+id/audio_play_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:src="@drawable/audio_player_speed_selector"/>
    </LinearLayout>

</LinearLayout>