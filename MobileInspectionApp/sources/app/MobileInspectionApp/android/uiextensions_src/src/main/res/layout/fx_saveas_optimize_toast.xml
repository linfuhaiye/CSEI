<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fx_saveas_optimize_radian"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/saveas_optimize_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/fx_saveas_optimize_success" />

    <TextView
        android:id="@+id/saveas_optimize_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:text="@string/rv_saveas_optimize_toast"
        android:textColor="@color/ux_color_white" />

</LinearLayout>