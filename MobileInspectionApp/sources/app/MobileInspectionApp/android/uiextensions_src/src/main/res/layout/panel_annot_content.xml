<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ux_text_color_title_light" >

        <TextView
            android:id="@+id/rv_panel_annot_searching"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="1/100"
            android:textColor="@color/ux_text_color_body2_dark"
            android:textSize="@dimen/ux_text_height_body2"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/rv_panel_annot_notify"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/rv_panel_annot_searching"
            android:gravity="center_vertical|left"
            android:paddingLeft="10dp"
            android:text="add 1 mofify 4 delete 2"
            android:textColor="@color/ux_text_color_subhead_colour"
            android:textSize="@dimen/ux_text_height_body2"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/rv_panel_annot_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rv_panel_annot_notify"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/ux_color_seperator_gray"
            android:dividerHeight="1px"
            android:fastScrollEnabled="false"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/rv_panel_annot_noinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:text="@string/rv_panel_annot_noinformation"
            android:textColor="@color/ux_text_color_body2_dark"
            android:textSize="@dimen/ux_text_height_body2"
            android:visibility="visible"/>

    </RelativeLayout>
</FrameLayout>