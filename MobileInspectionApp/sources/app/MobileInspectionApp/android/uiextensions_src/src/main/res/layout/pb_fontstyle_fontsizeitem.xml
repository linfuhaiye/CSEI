<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rv_panel_bkot_item_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical" >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="24px"
        android:textSize="@dimen/ux_text_height_body2"
        android:textColor="@color/pb_item_text_selector"
        android:singleLine="true"
        android:ellipsize="end"
        android:id="@+id/pb_tv_fontSizeItem"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pb_iv_fontSizeItem_selected"
        android:src="@drawable/pb_selected"/>
</LinearLayout>
