<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ux_horz_right_margin_phone"
        android:layout_marginRight="@dimen/ux_horz_left_margin_phone"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/pb_iv_fontstyle_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:src="@drawable/pb_fontstyle_back_selector" />

        <TextView
            android:id="@+id/pb_font_select_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/fx_string_font"
            android:textSize="@dimen/ux_text_height_body2"
            android:textColor="@color/ux_text_color_body2_dark"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/ux_color_seperator_gray"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/pb_lv_font"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@color/ux_color_translucent"
            android:divider="@color/ux_color_seperator_gray"
            android:dividerHeight="1px"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/ux_color_seperator_gray"/>

</LinearLayout>
