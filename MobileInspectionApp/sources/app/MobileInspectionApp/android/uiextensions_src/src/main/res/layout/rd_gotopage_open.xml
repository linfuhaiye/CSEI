<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rd_gotopage_open_root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/ux_bg_color_toolbar_colour"
    >

    <LinearLayout
        android:id="@+id/rv_gotopage_layout_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/hm_search_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/hm_search_small"
                />

            <EditText
                android:id="@+id/rd_gotopage_index_et"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="#00000000"
                android:imeOptions="actionGo"
                android:numeric="integer"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:singleLine="true"
                android:textColor="@color/ux_text_color_title_light"
                android:textColorHint="#FFDFDFDF"
                android:textCursorDrawable="@drawable/edittext_cursor_color_white"
                android:textSize="@dimen/ux_text_height_subhead"/>

            <ImageView
                android:id="@+id/rd_gotopage_edit_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/rd_search_clear_small_selector"
                android:visibility="visible"/>

        </LinearLayout>

        <TextView
            android:id="@+id/rd_gotopage_togo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="7dip"
            android:paddingRight="7dip"
            android:text="@string/rd_gotopage_toolbar_go"
            android:textColor="@color/ux_text_color_button_light"
            android:textSize="@dimen/ux_text_height_button"
            />
    </LinearLayout>

</RelativeLayout>