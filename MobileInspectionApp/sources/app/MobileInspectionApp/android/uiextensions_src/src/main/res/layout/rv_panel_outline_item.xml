<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/panel_outline_item_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/sd_outline_layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical" >
            <TextView
                android:id="@+id/sd_outline_chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Text"
                android:textSize="@dimen/ux_text_height_body2"
                android:textColor="@color/ux_text_color_body2_dark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sd_outline_layout_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/sd_outline_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:focusable="false"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@drawable/panel_outline_next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
