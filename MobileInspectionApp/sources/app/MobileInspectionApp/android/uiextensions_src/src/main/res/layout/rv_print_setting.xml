<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/ux_color_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tips"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/ux_list_item_height_1l_phone"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/ux_horz_left_margin_phone"
        android:text="@string/rv_print_options"
        android:textColor="@color/ux_text_color_subhead_colour"
        android:textSize="@dimen/ux_text_height_menu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ux_horz_left_margin_phone"
        android:paddingRight="@dimen/ux_horz_right_margin_phone">

        <TextView
            android:id="@+id/tv_switch_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:text="@string/rv_print_annot"
            android:textColor="@color/rd_menu_item_text_color_selector"
            android:textSize="@dimen/ux_text_height_body2">
        </TextView>

        <CheckBox
            android:id="@+id/rv_switch_print_annot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:button="@drawable/checkbox_selector"
            android:checked="false"
            android:gravity="center_vertical"
            android:minHeight="50dp">
        </CheckBox>
    </LinearLayout>

    <View
        android:id="@+id/rv_password_item_divide"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/annot_highlight_paintbox_outset"
        android:layout_marginTop="@dimen/annot_highlight_paintbox_outset"
        android:background="@color/ux_color_dialog_cutting_line">
    </View>

</LinearLayout>