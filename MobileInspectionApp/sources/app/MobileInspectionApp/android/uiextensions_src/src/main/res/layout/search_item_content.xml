<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rd_search_item_content_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/panel_bkot_item_bg"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="@dimen/ux_horz_left_margin_phone"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/search_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/ux_text_color_body2_dark"
        android:textSize="@dimen/ux_text_height_body2" />

    <TextView
        android:id="@+id/search_page_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/ux_text_color_body2_dark"
        android:textSize="@dimen/ux_text_height_body2"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/search_curpage_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center|center_horizontal"
            android:textColor="@color/ux_text_color_body2_dark"
            android:textSize="@dimen/ux_text_height_body2" />
    </LinearLayout>

</LinearLayout>
