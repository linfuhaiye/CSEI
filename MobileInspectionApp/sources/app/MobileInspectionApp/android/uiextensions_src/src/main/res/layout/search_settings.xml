<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rela_search_case_sensitive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rv_panel_bkot_item_bg">

        <TextView
            android:id="@+id/tv_search_case_sensitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:paddingTop="8dip"
            android:paddingRight="60dip"
            android:paddingBottom="8dip"
            android:text="@string/search_case_sensitive"
            android:textColor="@color/ux_color_black"
            android:textSize="@dimen/ux_text_height_menu"/>

        <CheckBox
            android:id="@+id/cb_search_case_sensitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/tv_search_case_sensitive"
            android:button="@drawable/fb_checkbox_selector"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_search_case_sensitive"
            android:layout_alignLeft="@+id/tv_search_case_sensitive"
            android:layout_alignRight="@+id/cb_search_case_sensitive"
            android:src="@color/ux_color_seperator_gray"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rela_search_whole_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_search_case_sensitive"
        android:layout_alignLeft="@+id/rela_search_case_sensitive"
        android:layout_alignRight="@+id/rela_search_case_sensitive"
        android:background="@drawable/rv_panel_bkot_item_bg">

        <TextView
            android:id="@+id/tv_search_whole_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dip"
            android:paddingTop="8dip"
            android:paddingRight="40dip"
            android:paddingBottom="8dip"
            android:text="@string/search_whole_words"
            android:textColor="@color/ux_color_black"
            android:textSize="@dimen/ux_text_height_menu"/>

        <CheckBox
            android:id="@+id/cb_search_whole_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:button="@drawable/fb_checkbox_selector"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_search_whole_words"
            android:layout_alignLeft="@+id/tv_search_whole_words"
            android:layout_alignRight="@+id/cb_search_whole_words"
            android:src="@color/ux_color_seperator_gray"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_search_in_internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rela_search_whole_words"
        android:layout_alignLeft="@+id/rela_search_whole_words"
        android:layout_alignRight="@+id/rela_search_whole_words"
        android:background="@drawable/rv_panel_bkot_item_bg"
        android:padding="8dip"
        android:text="@string/search_in_internet"
        android:textColor="@color/ux_color_black"
        android:textSize="@dimen/ux_text_height_menu"/>
</RelativeLayout>