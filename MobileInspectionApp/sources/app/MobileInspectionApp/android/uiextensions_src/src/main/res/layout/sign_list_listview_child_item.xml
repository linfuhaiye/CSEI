<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/sign_list_child__item"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/rd_menu_item_selector"
              android:orientation="vertical"
>
    <RelativeLayout
        android:id="@+id/sign_list_child_item_name_rootlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/ux_list_item_height_1l_phone">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:minHeight="@dimen/ux_list_item_height_1l_phone">
            <ImageView
                android:id="@+id/sign_list_item_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                android:src="@drawable/hm_select_normal"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/sign_list_child_menu_item"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/rd_bar_more_selector"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/sign_list_child_item_bitmap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toLeftOf="@id/sign_list_child_menu_item"
                android:layout_toRightOf="@id/sign_list_item_selected"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="@color/ux_text_color_body2_dark"
            />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/sign_list_child_menu_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/ux_bg_color_menu_gray"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/sign_list_child_edit_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:addStatesFromChildren="true"
                android:background="@drawable/fb_item_func_layout_selector"
                android:gravity="center"
                android:minHeight="100dp"
                android:minWidth="60dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/sign_list_child_item_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sign_template_edit_selector"
                    android:visibility="visible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1dp"
                    android:singleLine="true"
                    android:text="@string/fx_string_edit"
                    android:textColor="@color/hm_bottom_bar_text_color_selector"
                    android:textSize="@dimen/ux_text_height_menu"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sign_list_child_item_delete_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:addStatesFromChildren="true"
                android:background="@drawable/fb_item_func_layout_selector"
                android:gravity="center"
                android:minHeight="100dp"
                android:minWidth="60dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/sign_list_child_item_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/fb_delete_selector"
                    android:visibility="visible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1dp"
                    android:singleLine="true"
                    android:text="@string/fx_string_delete"
                    android:textColor="@color/hm_bottom_bar_text_color_selector"
                    android:textSize="@dimen/ux_text_height_menu"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/sign_list_child_item_cutting_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ux_toolbar_solidLine_height"
        android:background="@color/ux_color_dialog_cutting_line"
    />
</LinearLayout>
