<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menu_more_item_ly"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ux_list_item_height_1l_phone"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rd_menu_item_selector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/ux_horz_left_margin_phone">

        <ImageView
            android:id="@+id/menu_more_item_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/menu_more_item_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/menu_more_item_bt"
            android:singleLine="true"
            android:textColor="@color/rd_menu_item_text_color_selector"
            android:textSize="@dimen/ux_text_height_body2"/>

    </RelativeLayout>

    <View
        android:id="@+id/menu_more_item_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ux_toolbar_solidLine_height"
        android:background="@color/ux_color_seperator_menu_gray"
        android:visibility="gone">
    </View>

</LinearLayout>